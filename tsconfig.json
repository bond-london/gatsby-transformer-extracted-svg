{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "removeComments": true,
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["dom", "ES2017"],
    "sourceMap": true,
    "outDir": ".",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
